extends layout

block content
  div.row(style="background-color:rgb(237, 237, 237);")
    div(class='col-xs-8 col-xs-offset-2 col-xs-10 col-xs-offset-2 main')
      h1.page-header Current Job
      div(style='margin-bottom:20px; float: left; width: 50%;')  
        canvas(id='canvas')
        h3(class="text-center") Usage Statistics
      div(style='margin-bottom:20px; float: right; width: 50%;')  
        canvas(id='canvas2')
        h3(class="text-center") Efficiency Metrics
  div.row(style="background-color:#bdbdbd; margin-top:20px;")
    div(class='col-xs-8 col-xs-offset-2 col-xs-10 col-xs-offset-2 main')
      h1.page-header Previous Jobs
      div.table-responsive(style='padding-top: 40px; padding-bottom:20px;')
              table(class='table table-bordered table-hover table-condensed')
                thead
                  tr 
                    th JobID
                    th UTime
                    th Memory Requested
                    th Memory Used
                    th CPU Used
                    th Efficiency
                    th Max Memory
                    th Swap Used

                tbody
                  each job in user.jobs
                    tr
                      td #{job.jobID}
                      td #{job.utime} seconds
                      td #{job.memRequested}
                      td #{job.memUsed}
                      td #{job.cpuUsed}
                      td #{job.efficiency}
                      td #{job.maxMemory}
                      td #{job.swap_used}